package betaben.question;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class ClimbingClub {

	private static List<ClimbInfo> climbList;
	
	public ClimbingClub(){
		climbList = new ArrayList<>();
	}
	
	// A
	
//	public void addClimb(String peakName, int climbTime){
//		climbList.add(new ClimbInfo(peakName, climbTime));
//	}
	
	// B
	
	
	public void addClimb(String peakName, int climbTime){
		
		int index = 0;
		
		if(climbList.size() > 0){
			for(int i = 0; i < climbList.size(); i++){
				if(climbList.get(i).getName().compareTo(peakName) < 0){
					index++;
				}
			}
			
			climbList.add(index, new ClimbInfo(peakName, climbTime));
		} else {
			climbList.add(new ClimbInfo(peakName, climbTime));
		}
		
		for(ClimbInfo i : climbList){
			System.out.println(i.getName() + ":" + i.getTime());
		}
		System.out.println("------------");
		
	}

	public static void print(){
		for(int i = 0; i<climbList.size(); i++){
			System.out.println(climbList.get(i).getName());
		}
	}
	
	// C
	
//	public int distinctPeakNames(){
//		
//	}
	
}
